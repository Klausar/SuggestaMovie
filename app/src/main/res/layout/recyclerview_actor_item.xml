<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_marginEnd="16dp"
              android:orientation="vertical"
              android:layout_width="140dp"
              android:layout_height="wrap_content">

  <ImageView
    android:id="@+id/img_actor"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"
    android:contentDescription="@string/content_descr_thumbnail"
    android:maxHeight="210dp"
    android:minHeight="210dp"
    android:src="@drawable/placeholder_thumbnail"/>

  <TextView
    android:id="@+id/text_actor_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ellipsize="end"
    android:textColor="@color/colorBlackDark"
    android:maxLines="1"
    android:text="Actor name"/>

  <TextView
    android:id="@+id/text_character_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ellipsize="end"
    android:maxLines="1"
    android:text="Character name"/>

</LinearLayout>
