<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="210dp"
              android:paddingBottom="16dp"
              android:paddingTop="16dp"
              android:orientation="vertical"
              android:adjustViewBounds="true">

  <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
      android:id="@+id/img_thumbnail_movie_recycler"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:adjustViewBounds="true"
      android:contentDescription="@string/content_descr_thumbnail"
      android:maxHeight="210dp"
      android:src="@drawable/placeholder_thumbnail"/>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_toRightOf="@+id/img_thumbnail_movie_recycler"
      android:layout_toEndOf="@+id/img_thumbnail_movie_recycler"
      android:paddingLeft="16dp"
      android:paddingStart="16dp">

      <TextView
        android:id="@+id/text_movie_title_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingRight="50dp"
        android:textStyle="bold"
        android:text="Movie Title"/>

      <TextView
        android:id="@+id/text_movie_rating_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_star_black_24dp"
        android:drawableLeft="@drawable/ic_star_black_24dp"
        android:ellipsize="end"
        android:paddingTop="16dp"
        android:text="Rating: 7.4/10"/>

      <TextView
        android:id="@+id/text_movie_release_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_date_range_black_24dp"
        android:drawableLeft="@drawable/ic_date_range_black_24dp"
        android:ellipsize="end"
        android:paddingTop="16dp"
        android:text="Release: 2018-01-02"/>

    </LinearLayout>

    <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

      <ImageButton
        android:id="@+id/btn_favorite_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:src="@drawable/ic_star_border_yellow_48dp"/>

    </RelativeLayout>

  </RelativeLayout>

</LinearLayout>
